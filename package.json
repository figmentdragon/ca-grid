{
  "name": "grid",
  "version": "1.0.0",
  "description": "css grid framework",
  "main": "index.js",
  "scripts": {
    "test": "test",
    "build": "npm run css",
    "css-compile": "node-sass --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 scss -o assets/css/",
    "cscs-lint": "stylelint scss/",
    "css-prefix": "postcss --replace assets/css/starter.css --use autoprefixer --map",
    "css-purge": "purgecss --keyframes --css assets/css/starter.css --content index.html \"node_modules/bootstrap/js/dist/{util,modal}.js\" --output assets/css/",
    "css": "npm-run-all css-compile css-prefix",
    "server": "serve --listen 3000",
    "start": "npm-run-all --parallel watch server",
    "watch": "nodemon -e html,scss -x \"npm run css\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/figmentdragon/grid.git"
  },
  "keywords": [
    "css",
    "grid",
    "scss",
    "framework"
  ],
  "author": "cjmt",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/figmentdragon/grid/issues"
  },
  "homepage": "https://github.com/figmentdragon/grid#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "bootstrap": "^5.1.3",
    "css-purge": "^3.1.8",
    "csscomb": "^4.3.0",
    "csslint": "^1.0.5",
    "dart-sass": "^1.25.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "node-sass": "^6.0.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "popper.js": "^1.16.1",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.2",
    "prettier": "2.4.1",
    "purgecss": "^4.0.3",
    "purgecss-with-wordpress": "^4.0.3",
    "scss": "^0.2.4",
    "serve": "^13.0.2",
    "simple-grid": "^1.0.1",
    "stylelint": "^14.1.0"
  },
  "dependencies": {
    "jquery": "^3.6.0",
    "npm-check": "^5.9.2"
  }
}
