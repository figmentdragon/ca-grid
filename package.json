{
  "name": "cjmt-grid",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "test",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css",
    "compress:css": "node-sass grid.scss --output-style compress .grid.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' ./grid.scss -o ./grid.css",
    "concat:css": "concat -o ./grid.scss ./grid.css",
    "watch:sass": "sass grid.scss grid.css -w",
    "server": "npm-run-all --parallel watch server",
    "compile:sass": "sass --embed-sources --style=compressed grid.scss grid.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/figmentdragon/grid.git"
  },
  "author": "cjmt",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/figmentdragon/grid/issues"
  },
  "homepage": "https://github.com/figmentdragon/grid#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "concat": "^1.0.3",
    "node-sass": "^6.0.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.2",
    "purgecss": "^4.0.3",
    "sass": "^1.43.4",
    "serve": "^13.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-twbs-bootstrap": "^2.2.4"
  },
  "dependencies": {
    "bootstrap": "^5.1.3"
  }
}
